{
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-pdf",
        "-shell-escape",
        "-interaction=nonstopmode",
        "-synctex=1",
        "%DOC%"
      ]
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk with shell-escape",
      "tools": ["latexmk"]
    }
  ],
  "latex-workshop.latex.autoBuild.run": "never",
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.recipe.default": "latexmk with shell-escape",
  "cSpell.language": "hu",
  "cSpell.enabledLanguageIds": ["latex", "plaintext"],
  "cSpell.diagnosticLevel": "Warning",
  "cSpell.allowCompoundWords": true,
  "cSpell.ignoreRegExpList": [
  "\\\\[a-zA-Z]+",             // \commands
  "\\$[^$]*\\$",               // inline math
  "\\{[^\\}]*\\}",             // LaTeX {...} blocks
  "\\\\begin\\{[^}]+\\}.*?\\\\end\\{[^}]+\\}", // environments
  "/%.*/"  // Ez kiszűri az összes LaTeX kommentet
],
"gitlens.currentLine.enabled": false,
"gitlens.codeLens.enabled": false,
"gitlens.hovers.currentLine.over": "none",
"files.exclude": {
  "**/*.aux": true,
  "**/*.log": true,
  "**/*.out": true,
  "**/*.fls": true,
  "**/*.fdb_latexmk": true,
  "**/*.synctex.gz": true,
  "**/*.toc": true,
  "**/*.lof": true,
  "**/*.lot": true,
  "**/*.bbl": true,
  "**/*.blg": true,
  "**/*.bcf": true,
  "**/*.run.xml": true,
  "**/*.nav": true,
  "**/*.snm": true,
  "**/*.vrb": true,
  "**/*.idx": true,
  "**/*.ilg": true,
  "**/*.ind": true,
  "**/*.acn": true,
  "**/*.acr": true,
  "**/*.alg": true,
  "**/*.glg": true,
  "**/*.glo": true,
  "**/*.gls": true,
  "**/*.nlo": true,
  "**/*.lol": true,
  "**/*.loa": true,
  "**/*-SAVE-ERROR": true
  "**/*.data.minted": true
}
}
